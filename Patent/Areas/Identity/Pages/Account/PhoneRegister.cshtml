@page
@model PhoneRegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<partial name="_StatusMessage" model="Model.StatusMessage" />

<div class="row">
    <div class="col-md-4">
        <form method="post">
            @if (Model.IsPhoneNumberConfirmed)
            {
                <div class="form-group">
                    <label asp-for="Input.PhoneNumber"></label>
                    <input asp-for="Input.PhoneNumber" class="form-control" disabled />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                </div>

                <button typye ="submit" class="btn btn-primary" value="next">NEXT</button>
            }
            else
            {
                <div class="form-group">
                    <label asp-for="Input.PhoneNumber"></label>
                    <input asp-for="Input.PhoneNumber" class="form-control" />
                    <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                    <button type="submit" asp-page-handler="SendVerificationPhoneNumber" class="btn btn-link">Send verification phone number</button>
                </div>

                <div class="form-group">
                    <label asp-for="Input.Code"></label>
                    <input asp-for="Input.Code" class="form-control" />
                    <span asp-validation-for="Input.Code" class="text-danger"></span>
                    <button type="submit" asp-page-handler="VerifyPhoneNumber" class="btn btn-link">인증하기</button>
                </div>
            }
        </form>
    </div>
 </div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


